<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="2023070318000000-1" author="ak">

        <renameColumn
            tableName="pipeline"
            oldColumnName="process_info_id"
            newColumnName="process_info_create_id"
            columnDataType="bigint"/>

        <addColumn tableName="pipeline">
            <column name="process_info_revoke_id"
                    type="bigint"
                    defaultValue="null">
                <constraints nullable="true" />
            </column>
            <column name="process_info_notify_id"
                    type="bigint"
                    defaultValue="null">
                <constraints nullable="true" />
            </column>
            <column name="process_info_request_authorization_id"
                    type="bigint"
                    defaultValue="null">
                <constraints nullable="true" />
            </column>

        </addColumn>

    </changeSet>

    <!--
    Added the constraints for entity Pipeline.
-->
    <changeSet id="2023070318000000-2" author="ak">

        <dropForeignKeyConstraint  baseTableName="pipeline"
                                   constraintName="fk_pipeline__process_info_id"/>

        <addForeignKeyConstraint baseColumnNames="process_info_create_id"
                                 baseTableName="pipeline"
                                 constraintName="fk_pipeline__process_info_create_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bpmn_process_info"/>

        <addForeignKeyConstraint baseColumnNames="process_info_revoke_id"
                                 baseTableName="pipeline"
                                 constraintName="fk_pipeline__process_info_revoke_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bpmn_process_info"/>

        <addForeignKeyConstraint baseColumnNames="process_info_notify_id"
                                 baseTableName="pipeline"
                                 constraintName="fk_pipeline__process_info_notify_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bpmn_process_info"/>

        <addForeignKeyConstraint baseColumnNames="process_info_request_authorization_id"
                                 baseTableName="pipeline"
                                 constraintName="fk_pipeline__process_info_request_authorization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="bpmn_process_info"/>

    </changeSet>

</databaseChangeLog>
